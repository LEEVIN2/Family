<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.animal.mappers.Mapper"> 
	<insert id="insert">
	insert into member(email,pass)
	values(#{email},#{pass})
	</insert>
	
	<select id="checklogin" resultType="com.animal.domain.DTO">
	select * from member where email = #{email}
	</select>
	
	<insert id="insert2">
	insert into member(email,name,nickname,mobile)
	values(#{email},#{name},#{nickname},#{mobile})
	</insert>
	
	<select id="isUserExist" parameterType="string" resultType="int">
    SELECT COUNT(*) FROM member WHERE nickname = #{nickname}
	</select>






</mapper>